/var/log/syslog
{
    rotate 7
    daily
    missingok
    delaycompress
    compress
    sharedscripts
    postrotate
        /usr/bin/pkill -HUP rsyslogd  >/dev/null 2>&1 || true
    endscript
}

/var/log/mail.log
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
{
    rotate 7
    daily
    missingok
    compress
    delaycompress
{% if 'corporate' in group_names %}
    create 640 syslog adm
{% else %}
    create 640 syslog www-wpe
{% endif %}
    sharedscripts
    postrotate
        /usr/bin/pkill -HUP rsyslogd > /dev/null 2>&1 || true
    endscript
}


