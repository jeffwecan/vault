-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p icmpv6 -j ACCEPT
-A INPUT -i lo -j ACCEPT -m comment --comment "ALLOW LOOPBACK"
{% if 'bastion' in group_names %}
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT -m comment --comment " 100 ALLOW SSH"
{% else %}
-A INPUT -m state --state NEW -m tcp -p tcp --dport 80 -j ACCEPT -m comment --comment " 200 ALLOW HTTP"
-A INPUT -m state --state NEW -m tcp -p tcp --dport 443 -j ACCEPT -m comment --comment " 300 ALLOW HTTPS"
