# Set up logging Chains
-A LOGGING -m limit --limit 1/min -j LOG --log-prefix "iptables_log: " --log-level 4
-A LOGGING -j RETURN
-A OUTPUT -m tcp -p tcp -m multiport --dports 25,465,587 -j LOGGING
-A WHITELIST_LOGGING -m limit --limit 1/min -j LOG --log-prefix "iptables_whitelist_log: " --log-level 4
-A WHITELIST_LOGGING -j ACCEPT
-A BLACKLIST_LOGGING -m limit --limit 1/min -j LOG --log-prefix "iptables_blacklist_log: " --log-level 4
-A BLACKLIST_LOGGING -j REJECT
